<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cloudpad10">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cloudpad10">
        <activity android:name=".About" android:theme="@style/Theme.Cloudpad10.NoActionBar"></activity>
        <activity
            android:name=".SplashScreen"
            android:theme="@style/Theme.Cloudpad10.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".user.CreateAccount" />
        <activity android:name=".user.SignIn" />
        <activity
            android:name=".diary.EditPage"
            android:theme="@style/Theme.Cloudpad10.NoActionBar" />
        <activity
            android:name=".diary.AddNotes"
            android:theme="@style/Theme.Cloudpad10.NoActionBar" />
        <activity
            android:name=".diary.NoteDetails"
            android:theme="@style/Theme.Cloudpad10.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.Cloudpad10.NoActionBar"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>